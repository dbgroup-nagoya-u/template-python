{
  "[python]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.tabSize": 4,
    "editor.rulers": [
      88,
      100,
    ],
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  "files.exclude": {
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
  },
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "test"
  ],
  "flake8.args": [
    "--ignore=E203,W503",
    "--max-line-length=100",
  ],
  "cSpell.words": [
    "consolas",
    "venv",
    "dbgroup",
    "enduml",
    "noqa",
    "pipenv",
    "pyenv",
    "skinparam",
    "startuml"
  ],
}
